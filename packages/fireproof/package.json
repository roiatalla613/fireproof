{
  "name": "@fireproof/core",
  "version": "0.5.8",
  "description": "Cloudless database for apps, the browser, and IPFS",
  "main": "dist/src/fireproof.js",
  "module": "dist/src/fireproof.mjs",
  "typings": "dist/src/fireproof.d.ts",
  "types": "dist/src/fireproof.d.ts",
  "type": "module",
  "scripts": {
    "keygen": "node scripts/keygen.js",
    "test": "standard && npm run test:unencrypted && npm run test:mocha",
    "test:unencrypted": "set NO_ENCRYPT=true && npm run test:mocha",
    "test:mocha": "mocha test/*.test.js",
    "test:watch": "npm run test:mocha -- -w --parallel",
    "coverage": "c8 -r html -r text npm test",
    "prepublishOnly": "cp ../../README.md . && npm run build",
    "postpublish": "rm README.md",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "tsc": "tsc --watch",
    "build": "rollup -c"
  },
  "keywords": [
    "database",
    "JSON",
    "document",
    "IPLD",
    "CID",
    "IPFS"
  ],
  "contributors": [
    "J Chris Anderson",
    "Alan Shaw",
    "Travis Vachon",
    "Mikeal Rogers"
  ],
  "license": "Apache-2.0 OR MIT",
  "gptdoc": "Fireproof/API/Usage: import { Fireproof, Listener, Index } from '@fireproof/core'; const db = fireproof.storage('app-db-name'); const ok = await db.put({ any: 'json' }); const doc = await db.get(ok.id); await db.del(doc._id); const all = await db.allDocuments(); all.rows.map(({key, value}) => value); const listener = new Listener(db); listener.on('*', updateReactStateFn); const index = new Index(db, (doc, map) => map(doc.any, {custom: Object.keys(doc)})); const result = await index.query({range : ['a', 'z']}); result.rows.map(({ key }) => key);",
  "dependencies": {
    "@ipld/car": "^5.1.0",
    "@ipld/dag-cbor": "^9.0.0",
    "@rollup/plugin-commonjs": "^24.0.1",
    "archy": "^1.0.0",
    "async": "^3.2.4",
    "car-transaction": "^1.0.1",
    "charwise": "^3.0.1",
    "cli-color": "^2.0.3",
    "crypto-browserify": "^3.12.0",
    "encrypted-block": "^0.0.3",
    "idb": "^7.1.1",
    "multiformats": "^11.0.1",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "prolly-trees": "1.0.4",
    "randombytes": "^2.1.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "sade": "^1.8.1",
    "simple-peer": "^9.11.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "c8": "^7.12.0",
    "esbuild": "^0.17.16",
    "fake-indexeddb": "^4.0.1",
    "flexsearch": "^0.7.31",
    "mocha": "^10.2.0",
    "nanoid": "^4.0.0",
    "rollup": "^3.20.2",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "standard": "^17.0.0",
    "typescript": "^5.0.2",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1"
  },
  "mocha": {
    "require": [
      "fake-indexeddb/auto"
    ]
  },
  "standard": {
    "ignore": [
      "examples/**/*.tsx",
      "examples/**/dist",
      "out/**",
      "rollup.config.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fireproof-storage/fireproof.git"
  },
  "bugs": {
    "url": "https://github.com/fireproof-storage/fireproof/issues"
  },
  "homepage": "https://fireproof.storage",
  "exports": {
    ".": {
      "types": "./dist/src/fireproof.d.ts",
      "import": "./dist/src/fireproof.mjs",
      "module": "./dist/src/fireproof.mjs",
      "default": "./dist/src/fireproof.js",
      "require": "./dist/src/fireproof.js"
    },
    "./hooks/use-fireproof": {
      "import": "./hooks/use-fireproof.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist",
    "hooks",
    "README.md"
  ],
  "workspaces": [
    "examples/todomvc"
  ]
}
