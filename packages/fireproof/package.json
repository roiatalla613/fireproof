{
  "name": "@fireproof/core",
  "version": "0.3.2",
  "description": "Realtime database for IPFS",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "keygen": "node scripts/keygen.js",
    "test": "standard && npm run test:unencrypted && npm run test:mocha",
    "test:unencrypted": "NO_ENCRYPT=true npm run test:mocha",
    "test:mocha": "mocha --reporter list test/*.test.js",
    "test:watch": "npm run test:mocha -- -w --parallel",
    "coverage": "c8 -r html -r text npm test",
    "prepublishOnly": "cp ../../README.md .",
    "postpublish": "rm README.md",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "keywords": [
    "database",
    "JSON",
    "document",
    "IPLD",
    "CID",
    "IPFS"
  ],
  "contributors": [
    "J Chris Anderson",
    "Alan Shaw",
    "Travis Vachon",
    "Mikeal Rogers"
  ],
  "license": "Apache-2.0 OR MIT",
  "dependencies": {
    "prolly-trees": "1.0.4",
    "@ipld/car": "^5.1.0",
    "@ipld/dag-cbor": "^9.0.0",
    "archy": "^1.0.0",
    "async": "^3.2.4",
    "car-transaction": "^1.0.1",
    "charwise": "^3.0.1",
    "cli-color": "^2.0.3",
    "encrypted-block": "^0.0.3",
    "idb": "^7.1.1",
    "multiformats": "^11.0.1",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "fake-indexeddb": "^4.0.1",
    "flexsearch": "^0.7.31",
    "mocha": "^10.2.0",
    "nanoid": "^4.0.0",
    "standard": "^17.0.0"
  },
  "mocha": {
    "require": [
      "fake-indexeddb/auto"
    ]
  },
  "standard": {
    "ignore": [
      "examples/**/*.tsx",
      "examples/**/dist",
      "out/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fireproof-storage/fireproof.git"
  },
  "bugs": {
    "url": "https://github.com/fireproof-storage/fireproof/issues"
  },
  "homepage": "https://fireproof.storage",
  "exports": {
    "./fireproof": {
      "import": "./src/fireproof.js"
    },
    "./hydrator": {
      "import": "./src/hydrator.js"
    },
    "./listener": {
      "import": "./src/listener.js"
    },
    "./db-index": {
      "import": "./src/db-index.js"
    }
  },
  "workspaces": [
    "examples/todomvc"
  ]
}
