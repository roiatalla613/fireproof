{
  "name": "@fireproof/core",
  "version": "0.0.5",
  "description": "Realtime database for IPFS",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "standard && npm run test:mocha",
    "test:mocha": "mocha test/*.test.js",
    "test:watch": "npm run test:mocha -- -w --parallel test/*.test.js",
    "coverage": "c8 -r html -r text npm test",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "keywords": [
    "database",
    "JSON",
    "document",
    "IPLD",
    "CID",
    "IPFS"
  ],
  "contributors": [
    "J Chris Anderson",
    "Alan Shaw",
    "Travis Vachon",
    "Mikeal Rogers"
  ],
  "license": "Apache-2.0 OR MIT",
  "dependencies": {
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "fake-indexeddb": "^4.0.1",
    "flexsearch": "^0.7.31",
    "mocha": "^10.2.0",
    "nanoid": "^4.0.0",
    "standard": "^17.0.0"
  },
  "mocha": {
    "require": [
      "fake-indexeddb/auto"
    ]
  },
  "standard": {
    "ignore": [
      "examples/**/*.tsx",
      "examples/**/dist",
      "out/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jchris/fireproof.git"
  },
  "bugs": {
    "url": "https://github.com/jchris/fireproof/issues"
  },
  "homepage": "https://github.com/jchris/fireproof#readme",
  "workspaces": [
    "examples/todomvc"
  ]
}
