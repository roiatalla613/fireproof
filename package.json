{
  "name": "@fireproof/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Live database for the web",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/bundle/index.cjs",
      "import": "./dist/bundle/index.js",
      "types": "./dist/bundle/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && pnpm run build:cjs && tsup && pnpm run pub:fireproof-core && pnpm run pub:use-fireproof",
    "pub:fireproof-core": "cp -pr ./.gitignore ./README.md ./LICENSE.md dist/fireproof-core/; cp package-fireproof-core.json dist/fireproof-core/package.json",
    "pub:use-fireproof": "cp -pr ./.gitignore ./README.md ./LICENSE.md dist/use-fireproof/; cp package-use-fireproof.json dist/use-fireproof/package.json",
    "presmoke": "pnpm run build ; cd dist/fireproof-core ; pnpm pack",
    "smoke": "cd smoke && rm -f package.json node_modules; pnpm init ; node patch-package.json.mjs ; pnpm install -f ../dist/fireproof-core/fireproof-core-*.tgz; npx tsx ./node-test.ts",
    "build:cjs": "tsc",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:esm-bundle": "esbuild --external:node:url --external:node:fs --external:assert --external:node:path --external:node:os --bundle dist/esm/tests/fireproof/hello.test.js --outdir=dist/esm-bundle",
    "clean": "rm -rf node_modules dist",
    "start:react": "pnpm --filter @fireproof-example/react start",
    "start:solid": "pnpm --filter @fireproof-example/solid-js start",
    "test": "pnpm run test:node && pnpm run test:browser",
    "test:node": "vitest --run",
    "test:browser": "vitest --config vitest.browser.config.ts --run",
    "serve": "npx serve-http -p 8080 tests/www",
    "format": "prettier .",
    "lint": "eslint"
  },
  "keywords": [
    "database",
    "JSON",
    "immutable",
    "IPLD",
    "CID",
    "UCAN"
  ],
  "contributors": [
    "J Chris Anderson",
    "Alan Shaw",
    "Travis Vachon",
    "Mikeal Rogers"
  ],
  "license": "Apache-2.0 OR MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.14.6",
    "@types/randombytes": "^2.0.3",
    "@types/react": "^18.3.3",
    "@vitest/browser": "^1.6.0",
    "c8": "^7.12.0",
    "esbuild": "^0.21.5",
    "esbuild-plugin-resolve": "^2.0.0",
    "eslint": "^9.5.0",
    "glob": "^10.4.2",
    "happy-dom": "^14.12.3",
    "jasmine": "^5.1.0",
    "jasmine-browser-runner": "^2.5.0",
    "jasmine-core": "^5.1.2",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "tsx": "^4.15.6",
    "typescript": "^5.5.0",
    "typescript-eslint": "^7.13.1",
    "vite": "^5.3.1",
    "vite-tsconfig-paths": "^4.3.2",
    "webdriverio": "^8.39.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fireproof-storage/fireproof.git"
  },
  "bugs": {
    "url": "https://github.com/fireproof-storage/fireproof/issues"
  },
  "homepage": "https://github.com/fireproof-storage/fireproof#readme",
  "dependencies": {
    "@adviser/cement": "^0.1.13",
    "@ipld/car": "^5.3.1",
    "@ipld/dag-cbor": "^9.2.0",
    "@ipld/dag-json": "^10.2.1",
    "@ipld/unixfs": "^3.0.0",
    "@netlify/blobs": "^7.3.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@testing-library/react": "^16.0.0",
    "@ucanto/interface": "^10.0.1",
    "@web3-storage/clock": "^0.4.1",
    "@web3-storage/pail": "^0.6.0",
    "@web3-storage/w3up-client": "^15.0.0",
    "better-sqlite3": "^11.0.0",
    "charwise": "^3.0.1",
    "cross-fetch": "^4.0.0",
    "idb": "^8.0.0",
    "ipfs-unixfs-exporter": "^13.5.0",
    "js-base64": "^3.7.7",
    "multiformats": "^13.1.1",
    "p-limit": "^5.0.0",
    "partykit": "^0.0.107",
    "partysocket": "^1.0.1",
    "prolly-trees": "^1.0.4",
    "randombytes": "^2.1.0",
    "react": "^18.3.1",
    "std-env": "^3.7.0",
    "uuidv7": "^1.0.0",
    "vitest": "^1.6.0"
  }
}
